<div class="row">
  <aside class="col-md-4">
    <section class="followings_info">
      <h1>
        
<%= gravatar_for @user %>

        
<%= @user.name %>

      </h1>
    </section>
  </aside>
  <div class="col-md-8">
      <div class="row">

<% if @user.following_relationships.any? %>

      <h3>Followings (<%= @user.following_relationships.count %>)</h3>
      
      <ol class="followings">
        <% @followings.each do |user| %>
          <%= render 'following', followed: user %>  
        <% end %>
      </ol>
      
    </div>
    
<% end %>

  </div>
</div>