<% if logged_in? %>
  <div class= "row">
      <aside class="col-md-4">
          <section class="user_info">
              <%= render "shared/user_info" %>
          </section>
          
          <section class="micropost_form">
              <%= render "shared/micropost_form" %>
          </section>
      </aside>
      
      <div class="col-md-8">
          <h3>Micropost Feed</h3>
<%= render 'shared/feed' %>
      </div>
  </div>
  
   <% else %>
     <div class="center jumbotron">
         <h1>Welcome to the Microposts</h1>
         <div class="row text-center">
             <%= link_to(raw("<span class='glyphicon glyphicon-heart' aria-hidden='true'></span> <span class='glyphicon glyphicon-print' aria-hidden='true'></span> Sign up now! <span class='glyphicon glyphicon-print' aria-hidden='true'></span> <span class='glyphicon glyphicon-heart' aria-hidden='true'></span>"), 
                     signup_path, 
                     class: "btn btn-lg btn-primary") %>
        </div>
     </div>
<% end %>